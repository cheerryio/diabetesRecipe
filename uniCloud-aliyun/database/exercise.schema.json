// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"uid":{
			"title":"用户唯一ID",
			"bsonType":"string",
			"trim":"both"
		},
		"username":{
			"title":"用户名",
			"bsonType":"string",
			"trim":"both"
		},
		"create_date":{
			"bsonType":"timestamp",
			"description":"创建时间",
			"forceDefaultValue":{
				"$env":"now"
			}
		},
		"startTime":{
			"bsonType":"object",
			"description":"描述年，月，日，时，分"
		},
		"duration":{
			"title":"运动时长",
			"bsonType":"int",
			"description":"运动时长"
		},
		"intensity":{
			"title":"运动强度",
			"bsonType":"int"
		},
		"heartRate":{
			"title":"运动后心率",
			"bsonType":"int"
		}
	}
}
