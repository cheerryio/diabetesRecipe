// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["priority","name"],
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"categoryID":{
			"bsonType":"int",
			"title":"目录ID",
			"description":"唯一"
		},
		"priority":{
			"bsonType":"int",
			"title":"目录优先级",
			"description":"数字越小，优先级越高"
		},
		"name":{
			"bsonType":"string",
			"title":"名称",
			"description":"目录名称",
			"trim":"both"
		},
		"icon": {
			"bsonType": "string",
			"description": "类别图标/图片地址",
			"title": "图标地址",
			"pattern": "^(http://|https://|/|./|@/)\\S",
			"trim": "both"
		},
		"description": {
			"bsonType": "string",
			"description": "类别描述",
			"title": "类别描述",
			"trim": "both"
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"defaultValue": {
				"$env": "now"
			}
		}
	}
}
