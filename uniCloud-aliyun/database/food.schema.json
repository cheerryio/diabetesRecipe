// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["categoryID","foodID","name","price","isOnSale"],
	"permission": {
		"read": "doc.isOnSale == true",
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"categoryID":{
      "bsonType": "int",
      "description": "分类 id，参考`food-category`表",
      "foreignKey": "food-category._id"
    },
		"foodID":{
      "bsonType": "int",
      "description": "食物的唯一货号",
      "title": "货号",
      "trim": "both"
		},
		"name": {
			"bsonType": "string",
			"description": "食物名称",
			"title": "名称",
			"trim": "both"
		},
    "description": {
      "bsonType": "string",
      "description": "商品详细描述",
      "title": "详细描述",
      "trim": "both"
    },
		"price":{
			"bsonType":"int",
			"title":"价格",
			"description":"食物单价"
		},
		"unit":{
			"bsonType":"string",
			"title":"单位",
			"description":"食物售卖最小单位",
			"defaultValue":"g/份"
		},
		"thumbImg": {
			"bsonType": "string",
			"description": "食物缩略图，用于在列表或搜索结果中预览显示",
			"title": "缩略图地址",
			"pattern": "^(http://|https://|/|./|@/)\\S",
			"trim": "both"
		},
		"foodBannerImgs": {
			"bsonType": "array",
			"description": "商品详情页的banner图地址"
		},
		"isOnSale": {
			"bsonType": "bool",
			"description": "是否上架销售",
			"title": "是否上架"
		},
		"addDate": {
			"bsonType": "timestamp",
			"description": "上架时间",
			"defaultValue": {
				"$env": "now"
			}
		},
		"last_modify_date": {
			"bsonType": "timestamp",
			"description": "最后修改时间",
			"defaultValue": {
				"$env": "now"
			}
		}
	}
}
